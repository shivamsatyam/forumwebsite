<!DOCTYPE html>
<html lang="en">
<head>
	<style>
		
	</style>
	<meta charset="UTF-8">
	<link rel="stylesheet" type="text/css" href="/css/threads.css">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title></title>
</head>
<body>


	
		<div class="box">
		<div class="inner">
			<h1>Welcome to <%=datas.name%></h1>
			<p><%=datas.title%></p>
		</div>	
		<hr>
		<div class="second">
			<p><%=datas.description%></p>

		<button>Learn more</button>
		</div>
	</div>


	<h1 style="display: flex; justify-content: center;">Start A discussion</h1>

	<div class="discussions">
		<form action="" method="post">
			<div class="form-group">
				<h3>Enter your title</h3>
				<input type="text" name="title" required><br>
				<small>Please enter a specific title for your dicussion</small>
				<h3>Ellaborate your concern</h3>
				<textarea  id="textarea" name="desc" required></textarea><br>
				<button type="submit" name="submit">Post comment</button>
			</div>
			
		</form>
	</div>





	
	<div class="browse">
		<h1>Browse questions</h1>
	</div>
<div>


	<%question.forEach((e)=>{%>
<div class="media">
			<img src="/upload/<%=e.image%>">
			<div class="media-body">
				<h2><a class="notocord"  href="/answer/<%=e._id%>"><%=e.title.slice(0,40)%></a></h2>
				 
			</div>
</div>
		
		<%})%>	
	

<!-- <p>'.html_entity_decode(substr($row['question_description'],0,60), ENT_HTML5).'...</p> -->


<div class="hangnot">
	
	<div>
		<div>	
			<button class="hangnot-btn" id="previous">Previous</button>
		</div>
		<div style="display: flex;justify-content: center;">
			<input type="number" style="width: 33px;border: 2px solid; font-size: 23px;" id="small">	
			<button id="next" class="hangnot-btn">Next</button>
		</div>	
	</div>
</div>

<script type="text/javascript" src="parameter/js/threads.js">

</script>


	</body>
</html>